    <div id="mainproduct">
        <img id="pimg" src= <%= product.productImage %> alt="..." class="img-thumbnail">
        <form action="/addtocart/<%=product._id%>" method="post" id="prodets">
            <h3><%= product.productName %></h3>
            <h6>
              <%if(product.productCat==="Men"){%>
                Men 's Shoes
                <%} %>
                <%if(product.productCat==="Women"){%>
                  Women 's Shoes
                  <%} %>
                  <%if(product.productCat==="Boys"){%>
                    Boys 's Shoes
                    <%} %>
                    <%if(product.productCat==="Girls"){%>
                      Girls 's Shoes
                      <%} %>
            </h6>
            <h6>$<%= product.price %></h6>
            <div class="radio-toolbar" id="colors">
              <h5>Select Color</h5>
              <% product.color.forEach(function(elem){ %>
                <input required type="radio" name="color" value="<%= elem %>" id="color">
                <label for="#color"><%= elem %></label>
              <% }) %>
            </div>
            <div class="radio-toolbar" id="size">
            <h5>Select Size</h5>
            <% product.size.forEach(function(elem){ %>
                <input required type="radio" name="size" value="<%= elem %>" id="size">
                <label for="#size"><%= elem %></label>
            <% }) %>
            </div>
            <p><%= product.productDes %></p>
            <h6>Shown: <%= product.shown %></h6>
            <% if((user.cart.findIndex((e)=>e.product.toString() == product._id.toString()))=== -1){%>
              <button id="addtobag" class="btn btn-dark">
                add to cart
              </button>

              <% } else { %>
                  <a id="addtobag" href="/cart" class="btn btn-warning text-light">
                      go to cart 
                  </a>
              <% } %>
            <a id="addtofav" href="" class="btn btn-secondary">Favorites</a>
        </form>
